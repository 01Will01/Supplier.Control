@using Supplier.Control.Domain.Models
@model IEnumerable<SupplierModel>

@{
    ViewData["Title"] = "Visão Geral";
}

<h1>Visão geral</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar</a>
</p>

<div class="card text-white bg-dark mb-3" style="width: 60%; align-items: center;">
    <div class="card-header" style="font-size:x-large">
        Fornecedores
    </div>
    <div class="card-body" style="width:95%;">
        <table class="table" style="background-color: white; text-align: center; width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Document)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Document)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
